runner.ikomadigit.com {
    # Serve static frontend
    root * /usr/share/caddy
    file_server
    
    # Handle SPA routing
    try_files {path} /index.html

    # BFF Proxy: /api/* -> bff:3000/api/*
    handle /api/* {
        reverse_proxy bff:3000
    }

    # Logging for diagnostics
    log {
        output file /var/log/caddy/access.log
    }
}
